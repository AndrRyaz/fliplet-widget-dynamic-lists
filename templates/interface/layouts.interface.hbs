{{#each this}}
  <div class="layout-holder" data-layout="{{ id }}">
    <div class="layout-info">
      <p class="title">{{ name }} {{#if warning}}<span class="label label-warning">{{ warning }}</span>{{/if}}</p>
      <p class="description">{{ description }}</p>
    </div>
    <div class="image-holder">
      <div class="selected-screen">
        <i class="fa fa-check-circle"></i>
        <div class="layout-info">
          
        </div>
      </div>
      <img class="animated-gif" src="{{ gif }}" />
      <img class="static-img" src="{{ image }}" />
    </div>
  </div>
  {{/each}} 