<div class="rTableRow clearfix" data-id="{{id}}">
  <div class="original-row clearfix">
    <div class="rTableCell title">
      {{location}}:
    </div>
    <div class="rTableCell select field">
      <select name="select_summary_field" id="select_field_{{id}}" class="form-control">
        <option value="none">-- Select a data field</option>
        <option disabled>------</option>
        <option value="custom">Custom</option>
        <option disabled>------</option>
        {{#each columns}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="rTableCell select type">
      <select name="select_summary_type" id="select_type_{{id}}" class="form-control disabled" disabled>
        <option value="none">-- Select a type</option>
        <option disabled>------</option>
        <option value="image">Image</option>
        <option value="text">Plain text</option>
        <option value="html">HTML</option>
        <option value="url">URL</option>
        <option value="date">Date (eg: 14 Aug 2018)</option>
      </select>
    </div>
  </div>
  <div class="custom-field-input clearfix hidden">
    <div class="rTableCell title">
      Custom field
    </div>
    <div class="rTableCell select field">
      <input type="text" class="form-control" id="custom_field_field_{{id}}">
      <p class="text-muted field-text-info">Use <code>\{{*}}</code> to wrap around a field name, e.g. <code>Location: \{{city}}, \{{country}}</code>.</p>
    </div>
  </div>
</div>