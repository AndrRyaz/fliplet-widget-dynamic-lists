<div class="rTableRow clearfix" data-id="{{id}}">
  <div class="original-row clearfix">
    <div class="rTableCell title">
      {{interfaceName}}:
    </div>
    <div class="rTableCell select field">
      <select name="select_summary_field" id="select_field_{{id}}" class="form-control">
        <option value="none">-- Select a data field</option>
        <option disabled>------</option>
        <option value="empty">None</option>
        <option value="custom">Custom</option>
        <option disabled>------</option>
        {{#each columns}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="rTableCell select type">
      <select name="select_summary_type" id="select_type_{{id}}" class="form-control disabled" disabled>
        <option value="none">-- Select a type</option>
        <option disabled>------</option>
        <option value="image">Image</option>
        <option value="text">Plain text</option>
        <option value="html">HTML</option>
        <option value="url">URL</option>
        <option value="tel">Telephone</option>
        <option value="mail">Email</option>
        <option value="date">Date (eg: Aug 14th 2018)</option>
        <option value="time">Time (eg: 10:00 AM)</option>
      </select>
    </div>
  </div>
  <div class="custom-field-input clearfix hidden">
    <div class="rTableCell title">
      Custom field
    </div>
    <div class="rTableCell select field">
      <input type="text" class="form-control" id="custom_field_field_{{id}}">
      <p class="text-muted field-text-info">Use <code>\{{[*]}}</code> to wrap around a field name, e.g. <code>Location: \{{[city]}}, \{{[country]}}</code>.</p>
    </div>
  </div>
  <div class="image-field-select clearfix hidden">
    <div class="rTableCell title">
      Image folder or URL
    </div>
    <div class="rTableCell select field">
      <select class="form-control" id="folder_field_{{id}}" name="folder_field_select">
        <option disabled>------</option>
        <option value="url">URL to external image</option>
        <option disabled>------</option>
        <option value="all-folders">Show folders from other apps</option>
      </select>
    </div>
    <div class="rTableCell select field all-folders-select hidden">
      <select class="form-control" id="all_folders_field_{{id}}" name="all_folders_field_select">
        <option value="url">None</option>
      </select>
    </div>
    <div class="rTableCell select field">
      <p class="text-muted field-text-info folders-only">In the list data use the file name only (e.g. <code>image</code> or <code>image.jpg</code>)</p>
      <p class="text-muted field-text-info url-only hidden">In the list data use an URL (e.g. <code>http://fliplet.com/image.jpg</code>)</p>
    </div>
  </div>
</div>