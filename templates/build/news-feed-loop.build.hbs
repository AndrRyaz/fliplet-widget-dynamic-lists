\{{#each this}}
<div class="news-feed-list-item mix \{{[flClasses]}}" data-entry-id="\{{id}}">
  <div class="news-feed-item-content">
    \{{#if [Image]}}
    <section class="slide-under">
      <div class="image-banner">
        <img src="\{{auth [Image]}}">
      </div>
    </section>
    \{{/if}}
    <div class="container-fluid slide-over">
      <div class="news-feed-item-inner-content">
        <div class="news-feed-info-holder">
          <div class="news-feed-date-category">\{{formatDate [Date]}} \{{#ifCond [Date] '&&' [Categories]}}/\{{/ifCond}} \{{[Categories]}}</div>
          \{{#if likesEnabled}}
          <div class="news-feed-like-holder news-feed-like-holder-\{{id}}">
            <!-- Like button will be here -->
            <!-- Like placeholder -->
            <i class="fa fa-heart-o fa-lg like-placeholder"></i>
          </div>
          \{{/if}}

          \{{#if bookmarksEnabled}}
          <div class="news-feed-bookmark-holder news-feed-bookmark-holder-\{{id}}">
            <!-- Bookmark button will be here -->
            <!-- Bookmark placeholder -->
            <i class="fa fa-bookmark-o fa-lg bookmark-placeholder"></i>
          </div>
          \{{/if}}

          \{{#if commentsEnabled}}
          <div class="news-feed-comment-holder news-feed-comemnt-holder-\{{id}}">
            <!-- Like button will be here -->
            <!-- Like placeholder -->
            <i class="fa fa-comment-o fa-lg comment-placeholder"></i>
          </div>
          \{{/if}}
        </div>
        <h2 class="news-feed-item-title">\{{[Title]}}</h2>
        <div class="news-feed-item-description">
          \{{{auth [Content]}}}
        </div>
        <div class="news-feed-details-holder">
          \{{#each entryDetails}}
            <!-- Image template -->
            \{{#ifCond type '==' 'image'}}
              \{{#if labelEnabled}}
              <div class="news-feed-detail-label">\{{label}}</div>
              \{{/if}}

              <div class="news-feed-detail-value">
                <img src="\{{validateImage content}}">
              </div>
            \{{/ifCond}}

            <!-- Plain text template -->
            \{{#ifCond type '==' 'text'}}
              \{{#if labelEnabled}}
              <div class="news-feed-detail-label">\{{label}}</div>
              \{{/if}}

              <div class="news-feed-detail-value">\{{content}}</div>
            \{{/ifCond}}

            <!-- HTML template -->
            \{{#ifCond type '==' 'html'}}
              \{{#if labelEnabled}}
              <div class="news-feed-detail-label">\{{label}}</div>
              \{{/if}}

              <div class="news-feed-detail-value">\{{{content}}}</div>
            \{{/ifCond}}

            <!-- URL template -->
            \{{#ifCond type '==' 'url'}}
              \{{#if labelEnabled}}
              <div class="news-feed-detail-label">\{{label}}</div>
              \{{/if}}

              <div class="news-feed-detail-value">
                <a href="\{{content}}" target="_blank">Tap to open</a>
              </div>
            \{{/ifCond}}

            <!-- Date template -->
            \{{#ifCond type '==' 'date'}}
              \{{#if labelEnabled}}
              <div class="news-feed-detail-label">\{{label}}</div>
              \{{/if}}

              <div class="news-feed-detail-value">"\{{formatDate content}}</div>
            \{{/ifCond}}
          \{{/each}}
        </div>
        <div class="news-feed-inner-holder \{{#ifCond editEntry '||' deleteEntry}}has-edit-controls\{{/ifCond}}">
          \{{#ifCond editEntry '||' deleteEntry}}
          <div class="dynamic-list-controls">
            \{{#if editEntry}}
            <div class="btn btn-default dynamic-list-edit-item">Edit</div>
            \{{/if}}
            \{{#if deleteEntry}}
            <div class="btn btn-danger dynamic-list-delete-item">Delete</div>
            \{{/if}}
          </div>
          \{{/ifCond}}
          \{{#if commentsEnabled}}
          <div class="news-feed-comment-holder news-feed-comemnt-holder-\{{id}}">
            <!-- Like button will be here -->
            <!-- Like placeholder -->
            <i class="fa fa-comment-o fa-lg comment-placeholder"></i>
          </div>
          \{{/if}}
        </div>
      </div>
    </div>
    <div class="news-feed-item-close-btn-wrapper">
      <div class="news-feed-item-close-btn"><i class="fa fa-times"></i></div>
    </div>
  </div>
</div>
\{{/each}}