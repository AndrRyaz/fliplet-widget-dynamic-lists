\{{#each this}}
  <div class="longlist-item \{{data.[classes]}}">
    <div class="longlist-image">
      <div class="directory-detail-wrapper" data-entry-id="\{{id}}">
        <div class="directory-detail-image-wrapper">
          <div class="directory-detail-image" style="background-image: url('\{{data.[Image]}}')"></div>
          <i class="fa fa-user"></i>
        </div>
        
        <!-- Detail view -->
        <div class="directory-detail-close-btn"><i class="fa fa-times"></i></div>
        <div class="directory-detail-content-scroll-wrapper">
          <div class="directory-detail-content-wrapper">
            <div class="directory-detail-name">\{{data.[First Name]}} \{{data.[Last Name]}}</div>
            <div class="directory-detail-role">\{{data.[Title]}}</div>
            <div class="directory-detail-location">\{{data.[Location]}}</div>
            \{{#unless isCurrentUser}}
            <div class="directory-detail-buttons-wrapper">
              <div class="directory-detail-button">
                <div class="send-message">
                  <div class="directory-detail-button-image"><span class="icon-message"></span></div>
                  <div class="directory-detail-button-text">MESSAGE</div>
                </div>
              </div>
              \{{#if data.[Email]}}
              <div class="directory-detail-button">
                <a href="mailto:\{{data.[Email]}}" target="_blank">
                  <div class="directory-detail-button-image"><span class="icon-email"></span></div>
                  <div class="directory-detail-button-text">EMAIL</div>
                </a>
              </div>
              \{{/if}}
              \{{#if data.[Telephone]}}
              <div class="directory-detail-button">
                <a href="tel:\{{data.[Telephone]}}" target="_blank">
                  <div class="directory-detail-button-image"><span class="icon-call"></span></div>
                  <div class="directory-detail-button-text">CALL</div>
                </a>
              </div>
              \{{/if}}
              \{{#if data.[Linkedin]}}
              <div class="directory-detail-button">
                <a href="\{{data.[Linkedin]}}" target="_blank">
                  <div class="directory-detail-button-image"><span class="icon-linkedin"></span></div>
                  <div class="directory-detail-button-text">LINKEDIN</div>
                </a>
              </div>
              \{{/if}}
            </div>
            \{{/unless}}
            <div class="directory-detail-label">Bio</div>
            <div class="directory-detail-body-text">
              Bio would go here....
            </div>
            <div class="directory-detail-label">Sector</div>
            <div class="directory-detail-body-text">\{{data.[Sectors]}}</div>
            <div class="directory-detail-label">Workflows</div>
            <div class="directory-detail-body-text">\{{data.[Workstreams]}}</div>
            <div class="directory-detail-label">Telephone</div>
            <div class="directory-detail-body-text">\{{data.[Telephone]}}</div>
            <div class="directory-detail-label">Email</div>
            <div class="directory-detail-body-text">\{{data.[Email]}}</div>
          </div>
        </div>
        <!-- End of detail view -->

      </div>
    </div>
    <div class="longlist-text-wrapper">
      <div class="longlist-name">\{{data.[First Name]}} \{{data.[Last Name]}}</div>
      <div class="longlist-role">\{{data.[Title]}}</div>
      <div class="longlist-location">\{{data.[Location]}}</div>
    </div>
  </div>
  \{{/each}}