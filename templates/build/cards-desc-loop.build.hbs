\{{#each this}}
  <div class="fl-card mix \{{data.[categoryClass]}}" data-id="\{{id}}">
    <div class="fl-card-content">
      <section class="slide-under">
        <div class="banner" data-height="20vh" data-height-expanded="45vh" style="height: 20vh; background-image: url('\{{data.[thumbnail]}}');"></div>
      </section>
      <div class="container-fluid slide-over">
        <div class="inner-content" data-position="20vh" data-position-expanded="40vh" style="top: 20vh">
          <h2 class="title">\{{data.[title]}}</h2>
          <div class="description">
            \{{{data.[content]}}}
          </div>
        </div>
      </div>
      <div class="close-btn-wrapper">
      <div class="close-btn"><i class="fa fa-times"></i></div>
      </div>
    </div>
  </div>
  \{{/each}}