<div class="directory-detail-close-btn"><i class="fa fa-times"></i></div>
<div class="directory-detail-content-scroll-wrapper">
  <div class="directory-detail-content-wrapper">
    <div class="directory-detail-name">\{{data.[First Name]}} \{{data.[Last Name]}}</div>
    <div class="directory-detail-role">\{{data.[Title]}}</div>
    <div class="directory-detail-location">\{{data.[Location]}}</div>
    \{{#unless isCurrentUser}}
    <div class="directory-detail-buttons-wrapper">
      \{{#if data.[Email]}}
      <div class="directory-detail-button">
        <a href="mailto:\{{data.[Email]}}" target="_blank">
          <div class="directory-detail-button-image"><span class="fa fa-envelope-o"></span></div>
          <div class="directory-detail-button-text">EMAIL</div>
        </a>
      </div>
      \{{/if}}
      \{{#if data.[Telephone]}}
      <div class="directory-detail-button">
        <a href="tel:\{{data.[Telephone]}}" target="_blank">
          <div class="directory-detail-button-image"><span class="fa fa-phone"></span></div>
          <div class="directory-detail-button-text">CALL</div>
        </a>
      </div>
      \{{/if}}
      \{{#if data.[Linkedin]}}
      <div class="directory-detail-button">
        <a href="\{{data.[Linkedin]}}" target="_blank">
          <div class="directory-detail-button-image"><span class="fa fa-linkedin"></span></div>
          <div class="directory-detail-button-text">LINKEDIN</div>
        </a>
      </div>
      \{{/if}}
    </div>
    \{{/unless}}
    \{{#if data.[Bio]}}
    <div class="directory-detail-label">Bio</div>
    <div class="directory-detail-body-text">\{{data.[Bio]}}</div>
    \{{/if}} \{{#if data.[Sectors]}}
    <div class="directory-detail-label">Sector</div>
    <div class="directory-detail-body-text">\{{data.[Sectors]}}</div>
    \{{/if}} \{{#if data.[Expertize]}}
    <div class="directory-detail-label">Areas of expertize</div>
    <div class="directory-detail-body-text">\{{data.[Expertize]}}</div>
    \{{/if}} \{{#if data.[Telephone]}}
    <div class="directory-detail-label">Telephone</div>
    <div class="directory-detail-body-text">\{{data.[Telephone]}}</div>
    \{{/if}} \{{#if data.[Email]}}
    <div class="directory-detail-label">Email</div>
    <div class="directory-detail-body-text">\{{data.[Email]}}</div>
    \{{/if}}
  </div>
</div>