\{{#each this}}
<div class="simple-list-item mix \{{[flClasses]}} \{{#unless [Image]}}no-image\{{/unless}}" data-entry-id="\{{id}}">
  \{{#if [Image]}}
  <div class="list-item-image" style="background-image: url('\{{auth [Image]}}')"></div>
  \{{/if}}
  <div class="list-item-body">
    \{{#if [Title]}}
    <div class="list-item-title">\{{[Title]}}</div>
    \{{/if}}
    \{{#if [Description]}}
    <div class="list-item-description">\{{plaintext [Description]}}</div>
    \{{/if}}
    \{{#if [Category]}}
    <div class="list-item-subtitle">\{{[Category]}}</div>
    \{{/if}}
  </div>
  <i class="list-item-arrow fa fa-angle-right" aria-hidden="true"></i>
</div>
\{{/each}}